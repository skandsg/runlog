<h1>Listing runs</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Miles</th>
    <th>Time</th>
    <th>Pace</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @runs.each do |run| %>
  <tr>
    <td><%= run.date %></td>
    <td><%= run.miles %></td>
    <td><%= run.time %></td>
    <td><%= run.pace %></td>
    <td><%= run.user_id %></td>
    <td><%= link_to 'Show', run %></td>
    <td><%= link_to 'Edit', edit_run_path(run) %></td>
    <td><%= link_to 'Destroy', run, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

